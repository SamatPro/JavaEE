<?xml version = "1.0" encoding = "utf-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.kpfu.itis.models.City" table="city">
        <id name="id" type="java.lang.Long" column="id">
            <generator class="identity"/>
        </id>

        <property name="name" column="name"/>
        <property name="description" column="description"/>

        <set name="pictures" table="pictures" cascade="save-update">
            <key column="id"/>
            <one-to-many class="ru.kpfu.itis.models.Picture"/>
        </set>

        <many-to-one name="country" class="ru.kpfu.itis.models.Country" cascade="save-update">
            <column name="country_id" />
        </many-to-one>

    </class>

</hibernate-mapping>